{
    "name": "GT Sport Profile Extension",
    "description": "GT Sport Profile Extension",
    "version": "0.1.0",
    "manifest_version": 2,
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.gran-turismo.com/us/gtsport/user/*"
            ],
            "js": [
                "lib/Chart.min.js",
                "lib/mithril.min.js",
                "main.js"
            ]
        }
    ],
    "permissions": [
        "webNavigation"
    ]
}
